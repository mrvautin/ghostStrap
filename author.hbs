{{!< default}}

{{#author}}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
            {{#if image}}
                <figure class="author-image">
                    <div class="img" style="background-image: url({{image}})"><span class="hidden">{{name}}'s Picture</span></div>
                </figure>
            {{/if}}
            <h1 class="author-title">{{name}}</h1>
            {{#if bio}}
                <h3 class="author-bio">{{bio}}</h3>
            {{/if}}
            <div class="author-meta">
                {{#if location}}<p class="author-location icon-location">Location: {{location}}</p>{{/if}}
                {{#if website}}<p class="author-link icon-link">Website: <a href="{{website}}">{{website}}</a></p>{{/if}}
                <p class="author-stats"><i class="icon-stats"></i>Stats: {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</p>
            </div>
        </div>
    </div>
{{/author}}

{{! The main content area on the homepage }}
<div class="content">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</div>
